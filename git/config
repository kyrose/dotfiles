[user]
	name = Kyanne Rose 
	email = dev@kyanne.email

[core]
	excludesfile = ~/.config/git/ignore
	editor = nvim
    pager = less
    whitespace = fix,trailing-space,space-before-tab,-indent-with-non-tab
	trustctime = false
	autocrlf = input

[init]
    defaultBranch = main

[commit]
    template = ~/.config/git/gitmessage
    gpgsign = true
    verbose = true

[fetch]
    prune = true

[pull]
    rebase = true

[push]
    default = matching
    followTags = true

[diff]
    algorithm = patience
    tool = nvimdiff
    renames = copies
    submodule = log

[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
    trustexitcode = true

[merge]
    tool = nvimmerge
    log = true

[mergetool "nvimmerge"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[status]
    branch = true

[help]
	autocorrect = 1

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow 
    changed = green
    untracked = cyan

[github]
    user = kyrose

[alias]
    a = add
    br = branch
	c = commit
    co = checkout
	d = diff --stat=100,100
    dt = difftool
    f = fetch
    l = log --graph --branches --remotes --pretty=short
    lf = log --graph --branches --remotes --pretty=full
    s = status
    sm = submodule
    w = whatchanged
	cfix = commit --amend --reuse-message=HEAD
	last = log -1 HEAD
	log = log --graph --pretty=medium --date=iso
	undo = reset --soft HEAD~
	revert = reset --hard HEAD~
