[user]
	name = kyrose
	email = dev@kyanne.email

[core]
	excludesfile = ~/.config/git/ignore
	editor = v -w
	trustctime = false
	autocrlf = input

[grep]
	lineNumber = true

[help]
	autocorrect = 1

[push]
	default = simple
	followTags = true

[fetch]
	prune = true

[alias]
	co = checkout
	br = branch
	cm = commit
	st = status
	cfix = commit --amend --reuse-message=HEAD
	cmm = commit -m
	last = log -1 HEAD
	log = log --graph --pretty=medium --date=iso
	undo = reset --soft HEAD~
	revert = reset --hard HEAD~
